<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MaratonaShell.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MaratonaShell.Models"
    xmlns:viewmodels="clr-namespace:MaratonaShell.ViewModels"
    x:Name="PaginaInicial"
    Title="MainPage"
    x:DataType="viewmodels:MainPageViewModel">
    <ContentPage.BindingContext>
        <viewmodels:MainPageViewModel />
    </ContentPage.BindingContext>

    <Grid ColumnSpacing="10" RowSpacing="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Frame
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            BackgroundColor="AliceBlue"
            BorderColor="Blue"
            CornerRadius="20">
            <Editor
                Grid.RowSpan="2"
                Grid.ColumnSpan="3"
                BackgroundColor="Transparent"
                Keyboard="Default"
                Placeholder="Escreva seu texto"
                PlaceholderColor="Gray"
                Text="{Binding Entrada}"
                TextColor="Black"
                Visual="Material" />
            <!--
            <Entry
                Grid.RowSpan="2"
                Grid.ColumnSpan="3"
                BackgroundColor="Transparent"
                HorizontalTextAlignment="Start"
                Keyboard="Default"
                Placeholder="Escreva seu texto"
                PlaceholderColor="Gray"
                Text="{Binding Entrada}"
                TextColor="Black"
                VerticalTextAlignment="Start"
                Visual="Material" />
            -->
        </Frame>
        <Button
            Grid.Row="2"
            Grid.ColumnSpan="1"
            Padding="0"
            BackgroundColor="LightBlue"
            Command="{Binding AdicionaNotaCommand}"
            CornerRadius="30"
            Text="Salvar" />

        <Button
            Grid.Row="2"
            Grid.Column="1"
            Padding="0"
            BackgroundColor="Red"
            Command="{Binding ExcluiTodasCommand}"
            CornerRadius="30"
            Text="Apagar Todas" />

        <Button
            Grid.Row="2"
            Grid.Column="2"
            Padding="0"
            BackgroundColor="Crimson"
            CornerRadius="30"
            Text="Apagar Ultimo" />

        <RefreshView
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            Command="{Binding CarregaJsonComand}"
            IsRefreshing="{Binding IsBusy, Mode=OneWay}"
            RefreshColor="blue">

            <CollectionView ItemsSource="{Binding notas}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:NoteModel">
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItem
                                    BackgroundColor="red"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainPageViewModel}}, Path=ExcluiEscolhidaCommand}"
                                    CommandParameter="{Binding .}"
                                    IsDestructive="False"
                                    Text="Delete" />
                            </SwipeView.LeftItems>
                            <Grid BackgroundColor="LightGray" MinimumHeightRequest="5">
                                <Label
                                    BackgroundColor="LightGray"
                                    FontSize="Large"
                                    Text="{Binding Texto}"
                                    TextColor="Black" />
                                <Label
                                    Grid.Row="2"
                                    BackgroundColor="LightGray"
                                    Text="{Binding Hora}"
                                    TextColor="Gray" />
                            </Grid>
                        </SwipeView>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>

</ContentPage>
